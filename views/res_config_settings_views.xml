<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Helpdesk Settings Configuration -->
    <record id="res_config_settings_view_form_inherit_helpdesk" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.helpdesk</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Helpdesk" name="osool_helpdesk">
                    <block title="Genesys Integration" name="genesys_integration">
                        <setting string="Genesys Environment" help="The Genesys Cloud environment domain (e.g., mypurecloud.com, mypurecloud.ie)">
                            <field name="genesys_environment" placeholder="e.g., mypurecloud.com"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
