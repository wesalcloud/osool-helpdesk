<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Helpdesk Settings Configuration -->
    <record id="res_config_settings_view_form_inherit_helpdesk" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.helpdesk</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Helpdesk" name="osool_helpdesk">
                    <block title="Genesys Integration" name="genesys_integration">
                        <setting string="Genesys Environment" help="The Genesys Cloud environment domain (e.g., mypurecloud.com, mypurecloud.ie)">
                            <field name="genesys_environment" placeholder="e.g., mypurecloud.com"/>
                        </setting>
                    </block>
                    
                    <block title="Microsoft Graph API Configuration" name="ms_graph_api">
                        <setting string="Microsoft Graph API" help="Configure Microsoft Graph API for calendar integration (lift booking invitations)">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="ms_graph_tenant_id" class="col-lg-3 o_light_label"/>
                                    <field name="ms_graph_tenant_id" placeholder="Azure AD Tenant ID"/>
                                </div>
                                <div class="row">
                                    <label for="ms_graph_client_id" class="col-lg-3 o_light_label"/>
                                    <field name="ms_graph_client_id" placeholder="Application (Client) ID"/>
                                </div>
                                <div class="row">
                                    <label for="ms_graph_client_secret" class="col-lg-3 o_light_label" password="True"/>
                                    <field name="ms_graph_client_secret" password="True" placeholder="Client Secret Value"/>
                                </div>
                                <div class="row">
                                    <label for="ms_graph_calendar_email" class="col-lg-3 o_light_label"/>
                                    <field name="ms_graph_calendar_email" placeholder="osoolcare@osoolre.com"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
