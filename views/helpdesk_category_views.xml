<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category Views -->
    <record id="helpdesk_category_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.category.list</field>
        <field name="model">helpdesk.category</field>
        <field name="arch" type="xml">
            <list string="Ticket Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="team_id"/>
                <field name="team_department_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="helpdesk_category_view_form" model="ir.ui.view">
        <field name="name">helpdesk.category.form</field>
        <field name="model">helpdesk.category</field>
        <field name="arch" type="xml">
            <form string="Ticket Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="team_id"/>
                            <field name="team_department_id"/>
                            <field name="ticket_owner_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">helpdesk.category</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
