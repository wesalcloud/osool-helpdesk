<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Osool Custom Items to Existing Helpdesk Configuration Menu -->
    
    <menuitem id="menu_helpdesk_categories" 
              name="Categories" 
              parent="helpdesk.helpdesk_menu_config" 
              action="helpdesk_category_action" 
              sequence="50"/>

    <menuitem id="menu_helpdesk_subcategories" 
              name="Subcategories" 
              parent="helpdesk.helpdesk_menu_config" 
              action="helpdesk_subcategory_action" 
              sequence="51"/>

    <menuitem id="menu_helpdesk_audit" 
              name="Audit Trail" 
              parent="helpdesk.helpdesk_menu_config" 
              action="helpdesk_audit_action" 
              sequence="52"/>

    <!-- Site Kanban View for Overview -->
    <record id="helpdesk_site_overview_kanban" model="ir.ui.view">
        <field name="name">helpdesk.site.overview.kanban</field>
        <field name="model">helpdesk.site</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" js_class="helpdesk_team_kanban_view" create="0" sample="1">
                <field name="name"/>
                <field name="ticket_count"/>
                <field name="open_ticket_count"/>
                <field name="closed_ticket_count"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex flex-column h-100">
                            <!-- Site Name Header -->
                            <div class="o_kanban_card_header pb-2 mb-3 border-bottom">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong class="fs-5"><field name="name"/></strong>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Main Action Button -->
                            <div class="mb-3">
                                <button class="btn btn-primary w-100 py-3" name="action_view_tickets" type="object">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <div class="text-center">
                                            <h2 class="mb-0 text-white"><field name="ticket_count"/></h2>
                                            <span class="text-white">Tickets</span>
                                        </div>
                                    </div>
                                </button>
                            </div>
                            
                            <!-- Statistics Grid -->
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="border rounded p-3 text-center bg-light">
                                        <div class="fw-bold text-muted small mb-1">Open</div>
                                        <div class="fs-3 fw-bold text-primary"><field name="open_ticket_count"/></div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-3 text-center">
                                        <div class="fw-bold text-muted small mb-1">Closed</div>
                                        <div class="fs-3 fw-bold text-success"><field name="closed_ticket_count"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Override Helpdesk Overview to Show Sites -->
    <record id="helpdesk.helpdesk_team_dashboard_action_main" model="ir.actions.act_window">
        <field name="res_model">helpdesk.site</field>
        <field name="view_id" ref="helpdesk_site_overview_kanban"/>
    </record>

</odoo>
