<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extended Team Form View -->
    <record id="helpdesk_team_view_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.team.form.inherit</field>
        <field name="model">helpdesk.team</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Team Department field after company_id -->
            <xpath expr="//field[@name='company_id' and @groups='base.group_multi_company']" position="after">
                <group>
                    <field name="team_department_id"/>
                    <field name="department_site_id"/>
                </group>
            </xpath>
            
            <!-- Add Notified Emails section before Visibility & Assignment -->
            <xpath expr="//h2[text()='Visibility &amp; Assignment ']" position="before">
                <h2>Notification Emails</h2>
                <field name="notified_email_ids" widget="one2many" context="{'active_test': False}">
                    <list editable="bottom" create="1" edit="1" delete="1" import="1" export="1" context="{'active_test': False}">
                        <field name="sequence" widget="handle"/>
                        <field name="name" required="1"/>
                        <field name="email" widget="email" required="1"/>
                        <field name="active" widget="boolean_toggle"/>
                    </list>
                </field>
            </xpath>
            
        </field>
    </record>
</odoo>
