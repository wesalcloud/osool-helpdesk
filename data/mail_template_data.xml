<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email Template: Ticket Acknowledgment -->
        <record id="email_template_ticket_acknowledgment" model="mail.template">
            <field name="name">Osool Helpdesk: Ticket Acknowledgment</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="subject">Ticket Acknowledgment</field>
            <field name="email_from">osoolcare@osool.com</field>
            <field name="body_html" type="html">
                <p>Dear Customer,</p>
                <p>Thank you for contacting Osool. We have received your request.</p>
                <p>Our team will respond within 15 minutes.</p>
                <p>Best regards, Osool Care Team</p>
            </field>
        </record>
    </data>
</odoo>
